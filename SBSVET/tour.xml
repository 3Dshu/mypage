	<!-- startup action - load the first scene -->
	<action name="startup" autorun="onstart">
		if(startscene === null OR !scene[get(startscene)], copy(startscene,scene[0].name); );
		loadscene(get(startscene), null, MERGE);
		if(startactions !== null, startactions() );
	</action>
	
		<action name="switchHotspots">
			for(set(i, 0), i LT hotspot.count, inc(i), 
				if(hotspot[get(i)].group == %1, 
					switch(hotspot[get(i)].visible);
				);
			);
		</action>

	
	<scene name="scene_360" title="360" onstart="" thumburl="panos/360.tiles/thumb.jpg" lat="" lng="" heading="">

		<view hlookat="180" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="1.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/360.tiles/preview.jpg" />

		<image type="CUBE" multires="true" tilesize="512">
			<level tiledimagewidth="3200" tiledimageheight="3200">
				<cube url="panos/360.tiles/%s/l3/%v/l3_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1536" tiledimageheight="1536">
				<cube url="panos/360.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="768" tiledimageheight="768">
				<cube url="panos/360.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>
		
		<hotspot name="zavod01"  zorder="1" group="zavod" distorted="true" visible="false" url="zavod_b.png" preload="true" enabled="false"  handcursor="false"  alpha="1"   scale="0.3145"          ath="180" atv="0" />
		<hotspot name="zavod02"  zorder="1" group="zavod" distorted="true"  visible="false"  url="zavod_l.png" preload="true" enabled="false"  handcursor="false"  alpha="1"   scale="0.3145"          ath="270" atv="0" />
		
		<hotspot name="zavodknopka"  zorder="2" distorted="true" rx="-5" ry="-68" rz="0" url="knopka.png" enabled="true"  handcursor="true"  alpha="1"   scale="0.1"          ath="224" atv="-13" onhover="tween(hotspot[zavodknopka_GL].alpha , 0.4, 0.25, easeOutElastic)" onout="tween(hotspot[zavodknopka_GL].alpha ,0 , 1 ,easeOutElastic)" onclick="switchHotspots(zavod); "/>
		
		<hotspot name="zavodknopka_GL"  zorder="1" distorted="true" rx="-5" ry="-68" rz="0" url="knopka_GL.png" enabled="true"  handcursor="true"  alpha="0"   scale="0.1"          ath="224" atv="-13"  />
		
		<hotspot name="sklad"  zorder="1" group="sklad" distorted="true" visible="false" url="sklad.png" preload="true" enabled="false"  handcursor="false"  alpha="1"   scale="0.3145"          ath="180" atv="0" />
		
		<hotspot name="skladknopka2"  zorder="2" distorted="true" rx="0" ry="0" rz="-3" url="knopka2.png" enabled="true"  handcursor="true"  alpha="1"   scale="0.1"          ath="165" atv="-10" onhover="tween(hotspot[zavodknopka_GL2].alpha ,0.4, 0.25, easeOutElastic)" onout="tween(hotspot[zavodknopka_GL2].alpha ,0 , 1 ,easeOutElastic)" onclick="switchHotspots(sklad); "/>
		
		<hotspot name="zavodknopka_GL2"  zorder="1" distorted="true" rx="0" ry="0" rz="-3" url="knopka_GL2.png" enabled="true"  handcursor="true"  alpha="0"   scale="0.1"          ath="165" atv="-10"  />
		
		
		<hotspot name="lampa0ZIES80"  zorder="10" distorted="true" visible="true" url="lampa.jpg" enabled="true"  handcursor="false"  alpha="1"   scale="1"   onhover="tween(hotspot[lampaTEST].alpha, 1, 0.5, easeOutElastic); set(hotspot[lampaTEST].enabled, true)"  onout="tween(hotspot[lampaTEST].alpha, 0, 0.7, easeInQuart)"  onclick="tween(hotspot[lampaTEST].alpha, 1, 0.5, easeOutElastic); set(hotspot[lampaTEST].enabled, true)"   ath="170" atv="0" />
		<hotspot name="lampaTEST"  zorder="9" distorted="false" edge="leftbottom" visible="true" url="modul.png"  enabled="false"  handcursor="true"  alpha="0"   scale="0.22"   onhover="tween(hotspot[lampaTEST].alpha, 1, 0.5, easeOutElastic)"   onout="tween(hotspot[lampaTEST].alpha, 0, 0.7, easeInQuart); set(hotspot[lampaTEST].enabled, false))"  onclick="switchHotspots(sklad)"  ath="170" atv="0" />
		
	</scene>


